{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "paths": {
      "@app/state/*": ["./src/state/*"],
      "@app/questions/*": ["./src/questions/*"],
      "@app/supabase/*": ["./src/lib/supabase/*"],
      "@app/posthog/*": ["./src/lib/posthog/*"],
      "@app/cn": ["./src/lib/cn"],
      "@app/mdx/*": ["./src/lib/mdx/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
